<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="80dp">
    <TextView
        android:id="@+id/tvsoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="50dp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="+"
        android:padding="50dp">

    </TextView>
    <TextView
        android:id="@+id/tvsoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="50dp">

    </TextView>



</LinearLayout>

    <Button
        android:id="@+id/btnKQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:backgroundTint="#3E95DC"
        android:text="="
        android:layout_marginTop="10dp">

    </Button>


    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="3"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#4BC0F0"
        android:layout_marginTop="85dp">
        <Button
            android:id="@+id/btnso1"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textSize="30dp"
            android:text="1">

        </Button>
        <Button
            android:id="@+id/btnso2"
            android:backgroundTint="#3E95DC"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="2">

        </Button>
        <Button
            android:id="@+id/btnso3"
            android:layout_margin="20dp"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="3">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#4BC0F0"
        >
        <Button
            android:id="@+id/btnso4"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textSize="30dp"
            android:text="4">

        </Button>
        <Button
            android:id="@+id/btnso5"
            android:layout_margin="20dp"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="5">

        </Button>
        <Button
            android:id="@+id/btnso6"
            android:layout_margin="20dp"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="6">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#4BC0F0"
        >
        <Button
            android:id="@+id/btnso7"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textSize="30dp"
            android:text="7">

        </Button>
        <Button
            android:id="@+id/btnso8"
            android:layout_margin="20dp"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="8">

        </Button>
        <Button
            android:id="@+id/btnso9"
            android:layout_margin="20dp"
            android:backgroundTint="#3E95DC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="9">

        </Button>

    </LinearLayout>
</LinearLayout>