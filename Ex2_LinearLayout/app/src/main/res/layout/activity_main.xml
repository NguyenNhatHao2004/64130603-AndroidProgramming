<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">
    
    <Button
        android:id="@+id/nutso01"
        android:text="Nut so 1"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#5D30AF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/nutso02"
        android:text="Nut so 2"
        android:textSize="20dp"
        android:textColor="#B35353"
        android:background="#C39928"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/nutso03"
        android:text="Nut so 3"
        android:textSize="20dp"
        android:textColor="#FAB60D"
        android:background="#D3BD80"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"/>


</LinearLayout>